/* TOEFL.wxss */
.header{
  margin-top: 20px;
  font-size: 24px;
  text-align: center;
}

.word{
  margin-top: 50px;
  font-size: 50px;
  text-align: center;
}

.context {
  text-align: center;
  padding-top: 300rpx;
  padding-left: 200rpx;
  padding-right: 200rpx;
  /*display: flex;
  flex-direction: row;
  justify-content: space-between;
  */
  align-items: center;
}

.request{
  vertical-align: center;
  font-size: 20px;
  background-color: #66CCFF;
  border-radius: 12rpx;
  color: white;
}

.content {
  text-align: center;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
}

.outline {
  width: 500rpx;
  height: 240rpx;
}

.translation{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
  text-align: center;
  align-content: center;
}

.bottom{
  flex-direction: row;
  justify-content: space-between;
  display: flex;
  padding-top: 100rpx;
  padding-left: 200rpx;
  padding-right: 200rpx;
}

.correct{
  vertical-align: center;
  font-size: 20px;
  background-color: limegreen;
  border-radius: 12rpx;
  color: black;
}

.wrong{
  vertical-align: center;
  font-size: 20px;
  background-color: orangered;
  border-radius: 12rpx;
  color: black;
}

/*完成后的wxss*/
.title{
  margin-top: 50rpx;
  text-align: center;
  vertical-align: center;
  font-size: 32px;
  border-radius: 12rpx;
  color: black;
}

.result{
  margin-top: 150rpx;
  text-align: center;
  vertical-align: center;
  font-size: 25px;
  border-radius: 12rpx;
  color: black;
}

.back{
  padding-top: 200rpx;
  padding-left: 200rpx;
  padding-right: 200rpx;
  padding-bottom: 50rpx;
}

.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  align-items: center;
}
.weui-progress {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.weui-progress__bar {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.weui-progress__opr {
  margin-left: 15px;
  font-size: 0;
}